<section class="panel">
  <div class="panel-header">
    <h1>Posts</h1>
    <%= link_to "New post", new_admin_post_path, class: "button" %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Publish</th>
        <th>Views</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.status %></td>
          <td><%= post.published_at&.strftime("%Y-%m-%d %H:%M") || "-" %></td>
          <td><%= post.view_count %></td>
          <td class="actions">
            <%= link_to "Edit", edit_admin_post_path(post), class: "button button-muted" %>
            <%= link_to "View", post_path(post), class: "button button-muted" %>
            <%= link_to "Delete", admin_post_path(post), method: :delete, data: { turbo_confirm: "Delete this post?" }, class: "button button-warn" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
