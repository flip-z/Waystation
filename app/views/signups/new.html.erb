<section class="panel">
  <h1>Accept invite</h1>
  <p class="muted">This invite is for <strong><%= @invite.email %></strong>.</p>

  <% if @user.errors.any? %>
    <div class="flash flash-alert">
      <%= @user.errors.full_messages.to_sentence %>
    </div>
  <% end %>

  <%= form_with model: @user, url: signups_path(token: @invite.token), method: :post, local: true, class: "form-grid" do |f| %>
    <div>
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, value: @invite.email, disabled: true, class: "input" %>
    </div>
    <div class="actions">
      <%= f.submit "Create account", class: "button" %>
    </div>
  <% end %>
</section>
