<section class="panel">
  <h1>Sign in</h1>
  <p class="muted">Invite-only access. Magic links expire after 30 minutes.</p>

  <%= form_with url: session_path, method: :post, local: true, class: "form-grid" do %>
    <div>
      <%= label_tag :email, "Email" %>
      <%= email_field_tag :email, params[:email], required: true, class: "input" %>
    </div>
    <div class="actions">
      <%= submit_tag "Send magic link", class: "button" %>
    </div>
  <% end %>
</section>
